#!/bin/sh

set -e

. /usr/sbin/resin-vars

_vpn_port=443
readonly _vpn_port

if [ ! -f $CONFIG_PATH ]; then
	echo "prepare-openvpn: $CONFIG_PATH - No such file."
	exit 1
fi

while :; do
	_uuid=$(jq -r '.uuid' $CONFIG_PATH)
	# Default to the user api key if the device api key doesn't exist (eg registration happened in an older version that didn't support key exchange)
	_device_api_key=$(jq -r '.deviceApiKey // .apiKey' $CONFIG_PATH)

	if [ "$_uuid" = "null" ] || [ "$_api_key" = "null" ]; then
		echo "prepare-openvpn: UUID and/or APIKEY missing from config file, VPN cannot connect"
		sleep 2
	else
		echo $_uuid > /var/volatile/vpnfile
		echo $_device_api_key >> /var/volatile/vpnfile
		break
	fi
done

sed -e "/remote .*/ c\remote $VPN_ENDPOINT $_vpn_port" /etc/openvpn/resin.conf > /run/openvpn/resin.conf
